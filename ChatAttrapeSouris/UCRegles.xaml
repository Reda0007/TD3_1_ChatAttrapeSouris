<UserControl x:Class="ChatAttrapeSouris.UCRegles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">
            <Grid.Background>
                <ImageBrush ImageSource="/fonds/fondP.jpg"/>
            </Grid.Background>

            <TextBlock HorizontalAlignment="Left" Margin="119,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="555" FontFamily="Bahnschrift" FontSize="20" FontWeight="Bold" Background="#FFE8D161" Text="Le chat court automatiquement dès le début de la partie"/>
            <TextBlock HorizontalAlignment="Left" Margin="119,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="555" FontSize="20" Foreground="Black" FontFamily="Bahnschrift" FontWeight="Bold" Background="#FFE8D161" Text="Le joueur doit éviter les obstacles (buissons, caisses) en sautant"/>
            <TextBlock HorizontalAlignment="Left" Margin="119,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="555" FontSize="20" Foreground="Black" Background="#FFE8D161" TextAlignment="Justify" Text="Une collision avec un obstacle entraîne la fin de la partie" FontFamily="Bahnschrift" FontWeight="Bold"/>
            <Button x:Name="ButtonRetour" Content="Retour" HorizontalAlignment="Left" Margin="650,358,0,0" VerticalAlignment="Top" Height="30" Width="85" BorderBrush="Black" FontSize="18" FontFamily="Algerian">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD88A02"/>
                        <GradientStop Color="#FF5F2801" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="47,39,0,0" TextWrapping="Wrap" Text="Regles du jeu" VerticalAlignment="Top" Width="270" Height="50" FontSize="36" FontFamily="Algerian" TextAlignment="Center" Foreground="Black">
                <TextBlock.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFDB9003" Offset="0.219"/>
                        <GradientStop Color="#FF86D6EF" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Background>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="119,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="555" FontSize="20" Foreground="Black" FontWeight="Bold" Background="#FFE8D161" TextAlignment="Justify" Text="Le score est basé sur la durée de survie et le nombre d’obstacles franchis" FontFamily="Bahnschrift"/>


        </Grid>
    </Viewbox>
</UserControl>
