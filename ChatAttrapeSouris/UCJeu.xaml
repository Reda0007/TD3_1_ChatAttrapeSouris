<UserControl x:Class="ChatAttrapeSouris.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             Focusable="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Viewbox Stretch="Uniform">
        <Canvas x:Name="MainGrid" Height="450" Width="800" KeyDown="MainGrid_KeyDown" Focusable="True">
            <Menu Height="30" Width="800" Grid.Row="0">
                <MenuItem x:Name="menuParametre" Header="" Width="30" Height="30" Click="menuParametre_Click" >
                    <MenuItem.Background>
                        <ImageBrush ImageSource="/buttonsgaming/ButtonParametres.png"/>
                    </MenuItem.Background>
                </MenuItem>
                <MenuItem x:Name="ButtonPause" Width="30" Click="ButtonPause_Click">
                    <MenuItem.Background>
                        <ImageBrush ImageSource="/buttonsgaming/ButtonPause.png"/>
                    </MenuItem.Background>
                </MenuItem>
            </Menu>

            <Image x:Name="Fond1" Height="420" Canvas.Left="0" Source="/fonds/background1.jpg" Stretch="Fill" Canvas.Top="30" Width="1380" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image x:Name="Fond2" Height="420" Canvas.Left="1380" Source="/fonds/background1.jpg" Stretch="Fill" Canvas.Top="30" Width="1380" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="imgPerso" Height="200" Canvas.Bottom="50" Canvas.Left="51" Source="/cats/cat_01.png" Stretch="Fill"  Width="156" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Image x:Name="box" Height="44"  Source="/IMAGES/box.png" Stretch="Fill" Canvas.Bottom="70" Width="44" RenderTransformOrigin="13.201,0.387" Canvas.Left="623" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Image x:Name="buisson" Height="76"  Source="/IMAGES/bricked_bushes.png" Stretch="Fill" Canvas.Bottom="70" Width="44" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="368"/>
            <Label x:Name="labScore" Content="Score : 0" Canvas.Left="0" Canvas.Top="30" Height="29" Width="89" FontSize="15" FontWeight="Bold"/>

        </Canvas>
    </Viewbox>

</UserControl>
