<UserControl x:Class="ChatAttrapeSouris.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="MainGrid" Height="450" Width="800">
        <Menu Height="30" Width="800" Grid.Row="0">
            <MenuItem x:Name="menuParametre" Header="" Width="30" Height="30" Click="menuParametre_Click" >
                <MenuItem.Background>
                    <ImageBrush ImageSource="/buttonsgaming/ButtonParametres.png"/>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem x:Name="ButtonPause" Width="30" Click="ButtonPause_Click">
                <MenuItem.Background>
                    <ImageBrush ImageSource="/buttonsgaming/ButtonPause.png"/>
                </MenuItem.Background>
            </MenuItem>
        </Menu>
        
        <Image x:Name="Fond1" Height="420" Canvas.Left="0" Source="/fonds/background1.jpg" Stretch="Fill" Canvas.Top="30" Width="1380" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="Fond2" Height="420" Canvas.Left="1368" Source="/fonds/background1.jpg" Stretch="Fill" Canvas.Top="30" Width="1380" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="imgPerso" Height="260" Canvas.Left="48" Source="/cats/cat_01.png" Stretch="Fill" Canvas.Top="138" Width="216"/>

    </Canvas>
</UserControl>
