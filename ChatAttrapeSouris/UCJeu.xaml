<UserControl x:Class="ChatAttrapeSouris.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             Focusable="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    
    <Canvas x:Name="MainGrid" Height="450" Width="800" KeyDown="MainGrid_KeyDown" >
        <Menu Height="30" Width="800" Grid.Row="0">
            <MenuItem x:Name="menuParametre" Header="" Width="30" Height="30" Click="menuParametre_Click" >
                <MenuItem.Background>
                    <ImageBrush ImageSource="/buttonsgaming/ButtonParametres.png"/>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem x:Name="ButtonPause" Width="30" Click="ButtonPause_Click">
                <MenuItem.Background>
                    <ImageBrush ImageSource="/buttonsgaming/ButtonPause.png"/>
                </MenuItem.Background>
            </MenuItem>
        </Menu>

        <Image x:Name="Fond1" Height="420" Canvas.Left="0" Source="/fonds/background1.jpg" Stretch="Fill" Canvas.Top="30" Width="1380" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="Fond2" Height="420" Canvas.Left="1380" Source="/fonds/background1.jpg" Stretch="Fill" Canvas.Top="30" Width="1380" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image x:Name="imgPerso" Height="260" Canvas.Left="52" Source="/cats/cat_01.png" Stretch="Fill"  Width="216" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Top="155"/>
        <Image x:Name="box" Height="64"  Source="/IMAGES/box.png" Stretch="Fill" Canvas.Top="302" Width="64" RenderTransformOrigin="13.201,0.387" Canvas.Left="626" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image x:Name="buisson" Height="96"  Source="/IMAGES/bricked_bushes.png" Stretch="Fill" Canvas.Top="286" Width="64" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="368"/>

    </Canvas>

</UserControl>
