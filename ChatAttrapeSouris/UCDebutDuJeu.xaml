<UserControl x:Class="ChatAttrapeSouris.UCDebutDuJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/IMAGES/fondfromage.jpg"/>
        </Grid.Background>
        <Button x:Name="ButtonJouer" Content="" HorizontalAlignment="Left" Margin="552,280,0,0" VerticalAlignment="Top" Height="75" Width="215">
            <Button.Background>
                <ImageBrush ImageSource="/IMAGES/JouerBouton.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonRegles" Content="" HorizontalAlignment="Left" Margin="30,280,0,0" VerticalAlignment="Top" Height="75" Width="215" BorderBrush="Black">
            <Button.Background>
                <ImageBrush ImageSource="/IMAGES/ReglesBouton.jpg"/>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonChoixChat" Content="CHOIX DU CHAT" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Background="#FFF4D65E" BorderBrush="Black" Width="216" Height="75" FontFamily="Cooper Black" FontSize="24"/>
        <Image Margin="0,0,0,225" Source="/IMAGES/Titre.jpg" Stretch="Fill"/>
    </Grid>
</UserControl>
