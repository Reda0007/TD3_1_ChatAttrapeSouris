<UserControl x:Class="ChatAttrapeSouris.UCChoixChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">
            <Label x:Name="labConsigne" Content="Choix du personnage" Margin="0,94,0,0" VerticalAlignment="Top" Height="59" Width="415" FontSize="36" FontFamily="Algerian" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button x:Name="butJouer" Content="Jouer" HorizontalAlignment="Center" Margin="0,338,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" IsEnabled="False" Width="90" Height="35" Background="#FFC88A4B" FontFamily="Algerian" Foreground="Black" BorderBrush="{x:Null}"/>
            <RadioButton x:Name="RBChatBlanc"  HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Width="646" Click="RBChatBlanc_Click">
                <RadioButton.Content>
                    <Image Source="cats/cat_06.png" Width="150" Height="150"/>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton x:Name="RBChatJaune" HorizontalAlignment="Left" Margin="554,182,0,0" VerticalAlignment="Top" Click="RBChatJaune_Click">
                <RadioButton.Content>
                    <Image Source="cats/cat_05.png" Width="150" Height="150"/>
                </RadioButton.Content>
            </RadioButton>
        </Grid>
    </Viewbox>
</UserControl>
