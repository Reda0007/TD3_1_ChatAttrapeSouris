<UserControl x:Class="ChatAttrapeSouris.UCChoixChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="labConsigne" Content="Choix du personnage" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" Height="83" Width="363" FontSize="36"/>
        <Button x:Name="butJouer" Content="Jouer" HorizontalAlignment="Center" Margin="0,338,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" IsEnabled="False"/>
        <RadioButton x:Name="RBChatBlanc"  HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Width="646" Click="RBChatBlanc_Click">
            <RadioButton.Content>
                <Image Source="IMAGES/chat_blanc_choix.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <RadioButton x:Name="RBChatJaune" HorizontalAlignment="Center" Margin="617,182,0,0" VerticalAlignment="Top" Click="RBChatJaune_Click">
            <RadioButton.Content>
                <Image Source="IMAGES/chat_jaune_choix.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
    </Grid>
</UserControl>
