<Window x:Class="ChatAttrapeSouris.UCPause"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             Height="225" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/fonds/fondP.jpg"/>
        </Grid.Background>
        <Label Content="Vous voulez quitter?" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Algerian" FontWeight="Bold">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF904403"/>
                    <GradientStop Color="#FF94D0D6" Offset="0.896"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Button x:Name="Exit" Content="Quitter" HorizontalAlignment="Left" Margin="82,146,0,0" VerticalAlignment="Top" Background="#FFD7A835" BorderBrush="Black" FontSize="16" FontFamily="Algerian" Width="85" Height="25" Click="Exit_Click"/>
        <Button x:Name="Annul" Content="Annuler" HorizontalAlignment="Left" Margin="233,146,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Algerian" Background="#FFD7A835" BorderBrush="Black" Width="85" Height="25" Click="Annul_Click"/>

    </Grid>
</Window>
