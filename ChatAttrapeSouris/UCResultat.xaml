<UserControl x:Class="ChatAttrapeSouris.UCResultat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAttrapeSouris"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">
            <Button x:Name="ButtonQuitter" Content="QUITTER" HorizontalAlignment="Center" Margin="0,331,0,0" VerticalAlignment="Top" Width="160" Height="35" FontFamily="Algerian" FontSize="24" BorderBrush="Black"/>
            <Button x:Name="ButtonRejouer" Content="Rejouer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Height="34" FontFamily="Algerian" FontSize="24" Background="#FFD7A835" BorderBrush="Black"/>
            <Button x:Name="ButtonMenuResultat" Content="Menu" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Width="160" Height="30" FontFamily="Algerian" FontSize="22" Background="#FFD7A835" BorderBrush="Black"/>
            <Label x:Name="labScoreFinal" Content="SCORE : 0" HorizontalAlignment="Center" Margin="0,141,0,0" VerticalAlignment="Top" Height="39" Width="89" FontFamily="Agency FB" FontWeight="Bold" FontSize="24"/>
            
        </Grid>
    </Viewbox>
</UserControl>
